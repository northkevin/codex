{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": [
            "es2022",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/.prisma/client"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}